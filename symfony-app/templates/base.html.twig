<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Morizon Demo{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, Helvetica, Arial; margin: 24px; }
        .flash { padding: 10px 12px; border: 1px solid #ddd; margin: 8px 0; border-radius: 6px; }
        table { border-collapse: collapse; width: 100%; margin-top: 16px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th a { text-decoration: none; }
        .row { display: flex; gap: 16px; flex-wrap: wrap; align-items: end; }
        .actions { display:flex; gap:10px; align-items:center; }
        form.inline { display:inline; margin:0; }
        .muted { color:#666; font-size: 13px; }
        .btn { display:inline-block; padding:8px 12px; border:1px solid #ddd; border-radius:6px; text-decoration:none; background:#fafafa; }
        .btn-primary { border-color:#bbb; background:#f3f3f3; }
    </style>
</head>
<body>
{% for label, messages in app.flashes %}
    {% for msg in messages %}
        <div class="flash">{{ msg }}</div>
    {% endfor %}
{% endfor %}

{% block body %}{% endblock %}
</body>
</html>
